<script>
   window.onload = function() {
      
      let timeTags = document.getElementByTagName("h3")
      timeTags.forEach(function(element) {
         element.style.display = 'none'
      })
   }
   
   function getTime(){
      alert('!!')
      let date = new Date()
      console.log(date) 
      
      
      //서울 일때
      let locationTime = document.getElementById("seoulTime")
      
      msg = locationTime.innerHTML
      msg += date
      
      locationTime.innerHTML = msg
      
      locationTime.style.display = 'block'	//클릭한 지역 시간 보이게
      
      //뉴욕일 때
      let locationTime = document.getElementById("seoulTime")
      
      msg = locationTime.innerHTML
      msg += date
      
      locationTime.innerHTML = msg
      
      locationTime.style.display = 'block'	//클릭한 지역 시간 보이게
      
      
   }
</script>
