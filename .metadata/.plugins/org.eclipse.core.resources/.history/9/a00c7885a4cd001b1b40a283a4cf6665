<script>

/* 	window.onload = function(){
		setTimeout(function() {
			document.write('<h1>JAVASCRIPT</h1>')		
		}, 1000)
	} */
	
	window.onload = function(){
		alert('innerText : ' + document.body.innerText)		//태그 없이
		alert('innerHTML : ' + document.body.innerHTML)		//태그 포함
		
		let list = ''
		list += '<ul>'
		list += '<li>aaa</li>'
		list += '<li>bbb</li>'
		list += '<li>ccc</li>'
		list += '</ul>'
		
		document.body.innerText = list
		
		document.body.innerHTML = list
		
	}
	
</script>
</head>
