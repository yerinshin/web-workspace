<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script>	
	function func01() {	
			alert(arguments[0] + ' : ' + arguments[1] + " : " + arguments[2])
	}
	
	function func02(...numbers){
		console.log(numbers)
		alert(numbers[0]+ ' : ' + numbers[1] + ' : ' +numbers[2])
		alert(arguments[0] + ' : ' + arguments[1] + " : " + arguments[2])
	}
	
	//인자 두개는 필수, 그 외에는 옵션 일 경우
	function func03(a,b,...numbers) {
		alert(`a : ${ a }, b : ${ b }, number : ${ numbers }`)
	}
	
	/*
	func01(1, 2, 3)
	func02(1, 2, 3)
	func02(1)
	func03(10, 20, 30, 40, 50, 60)
	*/
	
	
	let array = [10, 20, 30]	//배열도 하나의 변수
	func01(array)				//arguments[0]에 배열 자체가 들어감
	
</script>
</head>
<body>

</body>
</html>