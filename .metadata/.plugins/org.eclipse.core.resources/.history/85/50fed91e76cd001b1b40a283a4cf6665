	class Person {
		constructor(name, phone, addr) {
			this._name = name	
			this._phone = phone
			this._addr = addr
		}
		
		info() {
			alert(`name : ${ this.name }\nphone : ${ this.phone }\naddr : ${this.addr}`)
		}
		
		
	}
	
	//javascript 는 윈도우라는 객체 안에서 돌아감. 
	//var, let을 안붙인 자료형의 변수는 윈도우 객체에 내가 만든 변수가 멤버변수로 들어가 있어서 콘솔창에서 접근 가능
	
	p = new Person("홍길동", "010-1111-2222", "경기도 광명시") 	//new할때만 prototype 가능 --> let p = {name:'hong'} : 이경우 p.prototype 사용 불가
	p.info()
	console.log(p)
		
</script>
