	const data = 'hello'
	
	alert(`a : ${ a }, b : ${ b }`) 	//오류x
	alert(`data : ${data})
	
	{
		let a = 30
		let c = 50
		alert(`a : ${ a }, b : ${ b }, c: ${ c }`)	 //오류x -30,10
		
	}
	
		alert(`a : ${ a }, b : ${ b }`) 			//10,10
		alert(`a : ${ a }, b : ${ b }, c: ${ c }`)	 //오류 - c없음
</script>
