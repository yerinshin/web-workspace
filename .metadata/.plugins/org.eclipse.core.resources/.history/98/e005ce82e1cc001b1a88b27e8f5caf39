<script>

	function Person(n, p, a) {
		let name = n
		let phone = p
		let addr = a
		
		this.getName = function() {
			return name	
		}
		
		this.setName = function(n) {
			name = n
		}
	}
	
	let person = new Person("홍길동", "010-1111-2222", "경기도 광명시")
	console.log(person.getName())
	person.setName('홍가네')
	console.log(person.getName())
	
	console.log(person.name)
</script>
