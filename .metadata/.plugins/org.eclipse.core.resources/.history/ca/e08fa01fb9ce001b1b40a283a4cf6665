<script>

     window.onload = function() {
   	  let timeTags = document.querySelectorAll("h3")
   	  console.log(timeTags)
   	  
      timeTags.forEach(function(element) {
         element.style.display = 'none'
      })
   }  
   
   function getWorldTime(tzOffset) { // 24시간제
	      var now = new Date();
	      var tz = now.getTime() + (now.getTimezoneOffset() * 60000) + (tzOffset * 3600000);
	      now.setTime(tz);

	      var s = leadingZeros(now.getFullYear(), 4) +
	         '-' + leadingZeros(now.getMonth() + 1, 2) +
	         '-' + leadingZeros(now.getDate(), 2) +
	         ' ' + leadingZeros(now.getHours(), 2) +
	         ':' + leadingZeros(now.getMinutes(), 2) +
	         ':' + leadingZeros(now.getSeconds(), 2);

	      return s;
	   }
	   function leadingZeros(n, digits) {
	      var zero = '';
	      n = n.toString();

	      if (n.length < digits) {
	         for (i = 0; i < digits - n.length; i++) zero += '0';
	      }
	      return zero + n;
	   }
   
   function getTime(loc){
	   console.log(loc)
	   
	   	  alert('!!')
	     
	      let time = loc
	      time += 'Time' 
	      
	      console.log(time)
	      console.log(typeof(time))
	      
	   
	      //서울 일때
	      let locationTime = document.getElementById(`${time}`)
	      console.log(locationTime)
	      locationTime.style.display = 'block'
	      
	      msg = locationTime.innerHTML
	      
	      switch(loc){ 
		      case 'seoul' :
		      	msg += getWorldTime(+9)
		    	break;
		      case 'newYork' :
		      	msg += getWorldTime(-5)
		      	break;
		      case 'paris' :
		     	 msg += getWorldTime(+1)
		     	 break;
		      case 'china' :
		    	 msg += getWorldTime(+8)
		      
	  	 }
	   
	      locationTime.innerHTML = msg 
      
   }
   
   
