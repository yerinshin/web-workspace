<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script>
	class Person {
		constructor(name, phone, addr) {
			this._name = name	
			this._phone = phone
			this._addr = addr
		}
		
		info() {
			alert(`name : ${ this.name }\nphone : ${ this.phone }\naddr : ${this.addr}`)
		}
		
		get name(){				//getter 없으면 p.name으로 접근 할수 있음(원래 p._name으로 접근해야함. )
			return this._name
		}
		
		set name(name) {
			this._name = name
		}
		
		get phone() {
			return this._phone
		}
		
		set phone(phone) {
			this._phone
		}
		
		get addr() {
			return this._addr	
		}
		
		set addr(addr) {
			this._addr = addr
		}
		
	}
	
	class Doctor extends Person {
		constructor(name, phone, addr, major) {
			super(name, phone, addr)
			//super(...arguments)
			this._major = major
		}
	}
	

	p = new Person("홍길동", "010-1111-2222", "경기도 광명시") 	
	p.info()
	console.log(p)
	
	let d = new Doctor('나최고', '010-3333-4444', '서울시 서초구 ㅇㅇ병원', '신경외과')
	//d.info()
	console.log(d)
	
	 
</script>
</head>
