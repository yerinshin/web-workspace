<script src="../js/jquery-3.6.0.min.js"></script>
<script>
	$(document).ready(function(){
		
		$('.day').hover(function(){
			$(this).animate({
				width : '150px',
				height : '150px',
				'line-height' : '150px'
				
			})	
			let msg = $(this).text() + '요일'
			msg+='요일'
			console.log(msg)
			$(this).text(msg)
		
		}, function(){
			$(this).animate({
				width : '100px',
				height : '100px',
				'line-height' : '100px'
			})
		})
		
	})
</script>
