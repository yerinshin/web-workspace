<title>Insert title here</title>
<script>
	function Person(name, phone, addr) {
		this.name = name
		this.phone = phone
		this.addr = addr
	}
	
	Person.prototype.hobby = '영화감상'
	
	
	Person.prototype.info = function() {
		let msg = ''
		for(let key in this) {
			if(key != 'info')
				msg += key + ' : ' + this[key] + '\n' 
		}
		
		alert(msg)
	}
	
	let p = new Person("홍길동", "010-1111-2222", "경기도 광명시")
	p.info()
	console.log(p)
	
</script>
