		})
		
		
		
		
		setInterval(function(){
		//	starFunc()	//1초에 한번씩 *
			
			//trigger : 이벤트가 일어나지 않았지만 그 이벤트가 일어났을 때처럼 실행하고 싶을 때
			$('h1').trigger('click') //1초에 한번 클릭 안했지만 한 것처럼	
		}, 1000)
		
		
		
		
	})
